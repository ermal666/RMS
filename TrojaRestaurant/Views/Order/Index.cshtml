@* Define model *@
@model IEnumerable<Order>

@* Define ViewData *@
@{
    ViewData["Title"] = "List of Orders";
}

@* Wirte code *@
<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.OrderNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.ShippingPrice)</th>
                <th>@Html.DisplayNameFor(model => model.TotalPrice)</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.OrderNumber)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ShippingPrice)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>

    </div>
</div>