@model TrojaRestaurant.Models.Models.ShoppingCart
@{
    ViewData["Title"] = "Order Now";
}

<partial name="_HeroPartial" />
<form method="post">
    <input hidden asp-for="ProductId" />
        <div class="card container p-4">
            <div class="card-header bg-dark text-white row">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Product.Title</h1>
                </div>
                <div class="col-12 col-md-6 text-end pt-4">
                    <span class="badge bg-primary pt-2" style="height:30px;">@Model.Product.Category.Name</span>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">
                            <div class="row pl-2">
                                <h5 class="text-success pb-2">List Price: @Model.Product.Price.ToString("c")</h5>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-2 text-primary"><h4>Count</h4></div>
                                <div class="col-10"><input asp-for="Count" class="form-control"  /></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success w-100 py-3 from-control" style="height:50px;" asp-action="Index">Back to Home</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control bg-dark text-white" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
</form>

