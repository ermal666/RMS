@* Define model *@
@model IEnumerable<Order>
@{
    ViewData["Title"] = "Order";
}

<partial name="_HeroPartial" />

<div class="container-p3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Order" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Order
            </a>
        </div>
    </div>

</div>

<table class="table table-borded table-striped" style="width=100%">
    <thead>
        <tr>
            <th>
                OrderNumber
            </th>
            <th>
                Address
            </th>
            <th>
                ShippingPrice
            </th>
            <th>
                TotalPrice
            </th>
            <th>
                IsComplete
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="25%">
                    @obj.OrderNumber
                </td>
                <td width="25%">
                    @obj.Address
                </td>
                <td width="15%">
                    @obj.ShippingPrice
                </td>
                <td width="15%">
                    @obj.TotalPrice
                </td>
                <td width="15%">
                    @obj.IsComplete
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Order" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Order" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>